<div class="container d-flex flex-column justify-content-center align-items-center">
    <h1 class="mt-5">Productos con Handlebars</h1>

    <div class="mt-5">
        <table class="table table-dark table-hover table-striped align-middle  text-center">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                    <tr>
                        <td>{{ title }}</td>
                        <td>${{ price }}</td>
                        <td><img class="h-25 w-25" src="{{ thumbnail }}" alt={{ title }}></td>
                    </tr>
                {{/each}}
                    <tr>
                        <td><p id="newItemTitle"></p></td>
                        <td id="newItemPrice"></td>
                        <script src="/socket.io/socket.io.js"></script>
                        <script src="/javascripts/script.js"></script>
                    </tr>

            </tbody>
        </table>
    </div>
</div>