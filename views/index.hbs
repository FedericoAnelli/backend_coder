
<div class="d-flex justify-content-center">
<form id="form" class="container m-5 d-flex flex-column justify-content-center align-items-center align-middle text-center" action="/" method="post">
    <h1 class="text-center">Agregar producto Handlebars</h1>
    <p>Titulo</p>
    <input type="text" id="title" name="title" placeholder="Ingrese producto">
    <p>Precio</p>
    <input type="number" name="price" id="price" placeholder="Ingrese precio">
    <p>Thumbnail</p>
    <input type="url" name="thumbnail" id="thumbnail" placeholder="Ingrese thumbnail">
  <button class="mt-5 btn btn-primary btn-lg" type="submit" action="/" method="get">Enviar</button>
</form>
</div>
<div class="p-5">
    <h1 class="mt-5 text-center">Productos con Handlebars</h1>
    <div class="mt-5">
        <table class="table table-dark table-hover table-striped align-middle text-center">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                    <tr>
                        <td>{{ title }}</td>
                        <td>${{ price }}</td>
                        <td><img class="h-25 w-25" src="{{ thumbnail }}" alt={{ title }}></td>
                    </tr>
                {{/each}}
                    <tr>
                        <td><p id="newItemTitle"></p></td>
                        <td><p id="newItemPrice"></p></td>
                        <td></td>
                    </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="p-5 d-flex flex-column align-middle justify-content-center">
    <h1 class="mt-5 text-center">Centro de Mensajes</h1>
    <input class="w-50 m-2" type="email" id="email" name="email" placeholder="Ingrese email">
    <div class="m-2 h-25 overflow-auto" id="messagesContainer">

    </div>
    <div class="d-flex">
    <input class="w-50 m-2" type="text" id="message" name="message" placeholder="Ingrese mensaje">
    <button class="m-2 btn btn-primary btn-lg w-25" id="sendMessage" type="submit">Enviar</button>
    </div>
</div>