<form id="form" class="container m-5 d-flex flex-column justify-content-center align-items-center" action="/productos" method="post">
    <h1>Agregar producto Handlebars</h1>
    <p class="mt-5">Titulo</p>
    <input type="text" id="title" name="title" placeholder="Ingrese producto">
    <p class="mt-3">Precio</p>
    <input type="number" name="price" id="price" placeholder="Ingrese precio">
    <p class="mt-3">Thumbnail</p>
    <input type="url" name="thumbnail" id="thumbnail" placeholder="Ingrese thumbnail">
  <button class="mt-5 btn btn-primary btn-lg" type="submit" action="/productos" method="get">Enviar</button>
</form>

    <h1 class="mt-5">Productos con Handlebars</h1>

    <div class="mt-5">
        <table class="table table-dark table-hover table-striped align-middle  text-center">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Imagen</th>
                </tr>
            </thead>
            <tbody>
                {{#each productos}}
                    <tr>
                        <td>{{ title }}</td>
                        <td>${{ price }}</td>
                        <td><img class="h-25 w-25" src="{{ thumbnail }}" alt={{ title }}></td>
                    </tr>
                {{/each}}
                    <tr>
                        <td><p id="newItemTitle"></p></td>
                        <td><p id="newItemPrice"></p></td>
                        <script src="/socket.io/socket.io.js"></script>
                        <script src="/javascripts/script.js"></script>
                    </tr>

            </tbody>
        </table>
    </div>